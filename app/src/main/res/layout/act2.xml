<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/jj"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1"
    tools:context="com.castro.presentacion.presentacion">

    <ImageView
        android:layout_width="296dp"
        android:layout_height="360dp"
        android:id="@+id/imageView"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/Perfil"
        android:layout_weight="0.47" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/fullname"
        android:id="@+id/textView"
        android:layout_gravity="center_horizontal"
        android:textSize="24dp"
        android:textColor="#08087d"
        android:background="#f1e655" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/age"
        android:id="@+id/edad"
        android:layout_gravity="center_horizontal"
        android:textSize="24dp"
        android:textAlignment="gravity"
        android:textColor="#f6f6ef"
        android:background="@color/colorAccent" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/telf"
        android:id="@+id/telf"
        android:layout_gravity="center_horizontal"
        android:textSize="24dp"
        android:textColor="#c51610"
        android:background="#b3f293" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ingeniero en Sistemas de InformaciÃ³n"
        android:id="@+id/textView2"
        android:layout_gravity="center_horizontal"
        android:textSize="30dp"
        android:textAlignment="center"
        android:textColor="#c0b2b2"
        android:background="@android:color/background_dark" />
</LinearLayout>